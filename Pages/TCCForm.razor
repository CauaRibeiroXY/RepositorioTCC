@page "/tccs/novo"
@inject TccDB.TccServices service
@inject NavigationManager NavigationManager

<h3>Adicionar Novo TCC</h3>

<div class="form-group">
    <label for="titulo">Título:</label>
    <input id="titulo" class="form-control" @bind="NovoTcc.Titulo" />
</div>
<div class="form-group">
    <label for="autor">Autor:</label>
    <input id="autor" class="form-control" @bind="NovoTcc.Autor" />
</div>
<div class="form-group">
    <label for="orientador">Orientador:</label>
    <input id="orientador" class="form-control" @bind="NovoTcc.Orientador" />
</div>
<div class="form-group">
    <label for="ano">Ano:</label>
    <input id="ano" class="form-control" @bind="NovoTcc.Ano" />
</div>
<div class="form-group">
    <label for="palavrasChave">Palavras-chave:</label>
    <input id="palavrasChave" class="form-control" @bind="NovoTcc.PalavrasChave" />
</div>
<div class="form-group">
    <label for="resumo">Resumo:</label>
    <textarea id="resumo" class="form-control" @bind="NovoTcc.Resumo"></textarea>
</div>

<button @onclick="SalvarTcc" class="btn btn-success">Salvar</button>

@code {
    private Tcc NovoTcc = new Tcc();

    private async Task SalvarTcc()
    {
        await service.AdicionarTccAsync(NovoTcc);
        NavigationManager.NavigateTo("/tccs");
    }
}
